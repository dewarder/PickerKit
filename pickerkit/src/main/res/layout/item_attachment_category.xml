<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_attachment_panel_category_min_height"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_attachment_category_circle"
        android:layout_width="@dimen/item_attachment_panel_category_circle_size"
        android:layout_height="@dimen/item_attachment_panel_category_circle_size"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/item_attachment_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#767676"
        android:textSize="12sp"/>

</LinearLayout>
